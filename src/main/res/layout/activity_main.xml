<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/camion3a"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--En tete-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:padding="20dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/backgroundhead"
            android:gravity="right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Connexion"
                android:textStyle="bold"
                android:id="@+id/connexion"
                android:textSize="16dp"
                android:clickable="true"/>
        </LinearLayout>

        <!--Time table-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp">

            <TextView
                android:id="@+id/timetable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:drawableLeft="@android:drawable/ic_menu_week"
                android:onClick="onClick"
                android:padding="15dp"
                android:text=" Show Timetable "
                android:background="@drawable/background_bouton"
                android:textSize="20dp"
                android:textColor="@color/black"/>
        </LinearLayout>


        <!--Google map view-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="40dp">

            <TextView
                android:id="@+id/map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:drawableLeft="@android:drawable/ic_menu_mapmode"
                android:onClick="onClick"
                android:padding="15dp"
                android:text=" Google map view "
                android:textColor="@color/black"
                android:background="@drawable/background_bouton"
                android:textSize="20dp"
                />
        </LinearLayout>


        <!--City-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="40dp">

            <TextView
                android:id="@+id/city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_bouton"
                android:clickable="true"
                android:drawableLeft="@android:drawable/ic_menu_mylocation"
                android:onClick="onClick"
                android:padding="15dp"
                android:text=" City's graph view "
                android:textSize="20dp"
                android:textColor="@color/black"/>
        </LinearLayout>

        <!--SMS Alert-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="40dp">

            <TextView
                android:id="@+id/sms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_bouton"
                android:clickable="true"
                android:drawableLeft="@android:drawable/stat_notify_chat"
                android:onClick="onClick"
                android:padding="15dp"
                android:text=" Alert via SMS !!! "
                android:textColor="@color/black"
                android:textSize="20dp" />
        </LinearLayout>


    </LinearLayout>

</ScrollView>